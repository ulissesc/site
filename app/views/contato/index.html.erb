<% @active_page = 'contato' %>

<% content_for :head do %>
  Contato
<% end %>

<div class="banner featured">
	<div class="container welcome">
	<h1 class="title">Contato</h1>	
	<h2>
		Deixe seu recado ou sugestão
	</h2>
	
	</div>
</div>

<div class="container container-padding">

	<div class="row">

		<div class="span4">
			<div class="well">
			<h2>Endereço</h2>
			<address>		
			 	Av. Santo Fregonese, 1666, bairro Industrial<br/>
			 	<strong>FINDEX/ACEFB</strong><br/>
			 	Francisco Beltrão, PR<br/>
			 	<abbr title="Telefone">Fone:</abbr> (46) 9111-7060
			</address>

			<address>
			  <strong>Email</strong><br>
			  Ulisses Constantini <a href="mailto:ulisses@parseint.com.br">ulisses@parseint.com.br</a><br/>
			  Financeiro <a href="mailto:administrativo@parseint.com.br">administrativo@parseint.com.br</a>
			</address>

			<address>
			  <strong>Skype</strong><br>
			  ulisses.constantini<br/>
			</address>
			</div>
		</div>

		<div class="span8">

			<%= render :partial => "/layouts/flash", locals: { flash: flash }  %>
			<%= form_for(@message, :url => contato_send_mail_path, :html => {:class => "form-horizontal"}) do |f| %>


			<div class="control-group">
				<div class="controls">
					<% @message.errors.full_messages.each do |msg| %>
					<p><%= msg %></p>
					<% end %>
				</div>
			</div>


			<div class="control-group">
				<%= f.label :name, "Nome #{mark_required(@message, :name)}", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :name, :class => "input-xlarge"  %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :email, "E-mail #{mark_required(@message, :email)}", :class => "control-label"  %>
				<div class="controls">
					<%= f.text_field :email, :class => "input-xlarge"  %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :content, "Mensagem #{mark_required(@message, :content)}", :class => "control-label"  %>
				<div class="controls">
					<%= f.text_area :content, :rows => "5", :class => "input-block-level" %>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Enviar", :class => "btn btn-warning"%>
				</div>
			</div>

			<% end %>

		</div>

		
	</div>

</div>

